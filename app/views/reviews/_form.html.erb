<% if @review.errors.any? %>
  <div class="fields_with_errors">
    <ul>
    <% @review.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @review, url:camp_reviews_path(@camp.id) do |f| %>
  <%= f.hidden_field :camp_id %>
  <%= f.label :rating %>
  <%= f.number_field :rating, id: 'rating', max: 5, min: 1 %>
  <br>
  <%= f.text_area :comments, id: 'comments', size: "50x4" %>
  <br>
  <%= f.submit "Submit Review", return: false %>
  <br><br>
<% end %>
