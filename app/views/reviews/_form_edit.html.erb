<% if @review.errors.any? %>
  <div class="fields_with_errors">
    <ul>
    <% @review.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <%= @review.camp.name %> - <%= @review.camp.state %><br><br>
  <%= form_for @review, url:camp_review_path do |f| %>
    <%= f.hidden_field :camp_id %>
    <%= f.label :rating %>
    <%= f.number_field :rating, max: 5, min: 1 %>
    <br>
    <%= f.text_area :comments, size: "50x8" %>
    <br>
    <%= f.submit "Edit" %>
    <% end %>
    <%= button_to "Delete", camp_review_path, :method => :delete %>
